                    %span.message Hey there, I wanted to ask you something...
                    %span.time
                      %i.fa.fa-clock-o
                      4:34 PM
                %li.divider
                %li
                  %a{href: "#"}
                    View Inbox
                    %span.badge 7
            %li.dropdown.alerts-dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                %i.fa.fa-bell
                Alerts
                %span.badge 3
                %b.caret
              %ul.dropdown-menu
                %li
                  %a{href: "#"}
                    Default
                    %span.label.label-default Default
                %li
                  %a{href: "#"}
