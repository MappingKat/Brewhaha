                %li
                  %a{href: "#"} View All
            %li.dropdown.user-dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                %i.fa.fa-user
                Admin 
                %b.caret
              %ul.dropdown-menu
                %li
                  %a{href: "#"}
                    %i.fa.fa-user
                    Profile
                %li
                  %a{href: "#"}
                    %i.fa.fa-envelope
                    Inbox
                    %span.badge 7
                %li
                  %a{href: "#"}
                    %i.fa.fa-gear
                    Settings
                %li.divider
            %li
            %a{href: "/signout"}
              %i.fa.fa-dashboard
              Logout
       
      #page-wrapper
        .row
          .col-lg-12
            %h1
              BrewHaHa
              %small Dashboard
            %ol.breadcrumb
              %li.active
                %i.fa.fa-dashboard
                Statistics Overview
            .alert.alert-success.alert-dismissable
              %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", type: "button"} 
        .row
          .col-lg-3
            .panel.panel-info
              .panel-heading
                .row
                  .col-xs-6
                    %i.fa.fa-comments.fa-5x
