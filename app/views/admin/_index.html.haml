  %body
    #wrapper
      %nav.navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.logo.navbar-brand{href: "/items"} BrewHaHa
        .collapse.navbar-collapse.navbar-ex1-collapse
          %ul.nav.navbar-nav.side-nav
            %li.active
              = link_to "All Orders", admin_orders_path
              %i.fa.fa-bar-chart-o
            %li
              = link_to "Edit Drinks", items_path
              %i.fa.fa-bar-chart-o
            %li
              = link_to "Edit Categories", edit_all_categories_path
              %i.fa.fa-bar-chart-o 
            %li
              = link_to "Create New Category",
                new_category_path
              %i.fa.fa-bar-chart-o
            %li
              = link_to "Create New Item",
                new_item_path   
              %i.fa.fa-bar-chart-o 
            
          %ul.nav.navbar-nav.navbar-right.navbar-user
            %li.dropdown.messages-dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                %i.fa.fa-envelope
                Messages
                %span.badge 7
                %b.caret
              %ul.dropdown-menu
                %li.dropdown-header 7 New Messages
                %li.message-preview
                  %a{href: "#"}
                    %span.avatar
                      %img{src: "http://placehold.it/50x50"}/
