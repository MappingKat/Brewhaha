%h1 Listing items
= link_to 'New Item', new_item_path, role: "button", class:"btn btn-default"
%table
  %thead
    %tr
      - if "this is where we check for admin"==true
        %th Available
      %th Name
      %th Description
      %th Price
      - if "this is where we check for admin"==true
        %th Cost
      %th Category
      - if "this is where we check for admin"==true
        %th Sort order
      %th
      %th
      %th
  %tbody
    - @items.each do |item|
      = render :partial => 'items/listing', :locals => { :item => item }
%br/
