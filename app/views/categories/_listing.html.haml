%h3
  = category.name
%h6
  = category.description
  - if current_customer.admin == true
    = link_to 'Show', category
    = link_to 'Edit', edit_category_path(category)
    = link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }
%br
%table.table.table-hover.categories
  %thead
    %tr
      - if current_customer.admin == true
        %th Available
      %th Name
      %th Description
      %th Price
      - if current_customer.admin == true
        %th Cost
        %th Category
        %th Sort order
      %th
      %th
      %th
    %tbody
      - category.items.each do |item|
        = render :partial => 'items/listing', :locals => { :item => item }
