%h3
  Order##{@order.id} - Date order placed: #{@order.updated_at.strftime('%m/%d/%Y')}
  .row
    %table.table.table-hover
      %thead
        %tr
          %th Item
          %th Quantity
          %th Price
        %tbody
          - @order.order_items.each do |order_item|
            %tr
              %td= order_item.item.name
              %td= order_item.quantity
              %td= order_item.currency
  .row
    Order Total: #{@order.currency}
  .row
    .col-md-4.col-md-offset-4
      = link_to '/', role: "button", class: "btn btn-large btn-block btn-primary review-buttons" do
        .review-button
          Return to menu
    /.col-md-4
    /  = link_to '/', role: "button", class: "btn btn-large btn-block btn-primary review-buttons" do
    /    .review-button
